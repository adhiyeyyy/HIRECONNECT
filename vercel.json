{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/server.js"
        },
        {
            "source": "/login",
            "destination": "/frontend/login.html"
        },
        {
            "source": "/browse",
            "destination": "/frontend/browse.html"
        },
        {
            "source": "/post",
            "destination": "/frontend/post.html"
        },
        {
            "source": "/details",
            "destination": "/frontend/details.html"
        },
        {
            "source": "/payment",
            "destination": "/frontend/payment.html"
        },
        {
            "source": "/signup",
            "destination": "/frontend/signup.html"
        },
        {
            "source": "/admin",
            "destination": "/frontend/admin.html"
        },
        {
            "source": "/admin-login",
            "destination": "/frontend/admin_login.html"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}